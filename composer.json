{
    "name": "robconvery/weather-adapter",
    "description": "A shared interface for weather gateways",
    "license": "MIT",
    "authors": [
        {
            "name": "Robert Convery",
            "email": "robconvery@me.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "nesbot/carbon": "^1.26.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "Robconvery\\WeatherAdapter\\": "src/"
        }
    },
    "scripts": {
        "cs": [
            "./vendor/bin/phpcs --standard=PSR2 src"
        ],
        "cs-fix": [
            "./vendor/bin/phpcbf --standard=PSR2 src"
        ]
    }
}
